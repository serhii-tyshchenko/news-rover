{
    "singleQuote": true,
    "printWidth": 80,
    "semi": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^react",
        "^[a-z]",
        "^@",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderSeparateGroups": true
}